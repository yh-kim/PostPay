<resources>
    <style name="PostPay" />

    <style name="PostPay.Main" />
    <style name="PostPay.Main.Linear" parent="AppTheme.NoTitle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PostPay.Main.ImageView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
    <style name="PostPay.Main.TextView">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBlack</item>
    </style>
</resources>
